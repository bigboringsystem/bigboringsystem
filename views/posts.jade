extend layout

block content
  h1 my posts

  form(method='post', action='/post')
    label(for='reply') reply links to previous posts? (space delimited)
      input(type='text', name='reply')
    label(for='tags') tags (comma delimited)
      input(type='text' name='tags')
    label(for='content') content
      textarea(rows='10', cols='90', name='content')
    if error
      p.error= error
    input(type='hidden', name='crumb', value='#{crumb}')
    button(type='submit') save

  #posts
    for post in posts
      article
        time
          a(href='/post/#{post.key}')= post.value.created
        if post.value.tags.length > 0
          p.tags tags:
            for tag in post.value.tags
              |&#xa0;
              a(href='/discover?tag=#{tag}')= '#' + tag
        if post.value.reply
          p.reply in reply to:&#xa0;
            != post.value.reply
        pre!= post.value.content
    .pagination
      if next && lastKey
        a(href='/posts?last=#{lastKey}') older

block scripts
  script(type='text/javascript', src='/js/post.js')
