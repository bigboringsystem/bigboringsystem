*  Ops
*
----------------------------------------------------------------------
====================================================================*/

.op a:after
  content: ' *'

.ban, .unban
  background-color: $negative_color
  color: #fff
  font-size: 1.4rem
  padding: 0 3px

.unban
  background-color: #333

.delete
  position: absolute
  right: -10px
  top: 40px

.delete button
  background-color: $negative_color
  color: #fff
  font-size: 1.3rem

.moderate
  display: inline
  background: none
  padding: 0
  margin: 0

.moderate button
  width: auto
  padding: 0
  margin: 0
  line-height: 1
  height: auto
  display: inline
  background: none
  color: $negative_color
  font-size: inherit

.pagination
  border-top: 1px solid #eee
  margin: 30px 0
  padding-top: $base_spacing_unit

.content article p.reply
  font-style: italic
  margin-bottom: 0
  margin-top: 15px

.delete-account
  margin-top: 150px